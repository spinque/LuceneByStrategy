<!-- LibraryBuildingBlockCell.ui.xml -->
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

<ui:style>
.cellItem {
  background-color: #F8F8F8;
  padding: 3px;
  margin: 0 1px 2px 1px;
  overflow: hidden;
}
.header {
  float: left;
  font-family: Verdana,Geneva,Arial,Helvetica,sans-serif;
  font-size: 11px;
  overflow: hidden;
  padding: 2px 2px 2px 4px;
}
.details {
  font-family: Verdana,Geneva,Arial,Helvetica,sans-serif;
  font-size: 9px;
}
.icon {
  float: left;
}
.infoButton {
  float: right;
}
.infoButton span {
  background-color: #FFFFFF;
  border: 1px solid #999999;
  border-radius: 6px;
  color: #555555;
  font-size: 10px;
  font-weight: bold;
  padding: 2px 3px;
  cursor: pointer;  
}
</ui:style>

<g:FocusPanel ui:field="panel">
<g:HTMLPanel styleName="{style.cellItem}" ui:field="bbPanel">
  <g:Image styleName="{style.icon}" ui:field="img" url="images/cube_grey.gif"/>
  <div class="{style.header}" ><span ui:field="nameSpan"/></div>
  <div class="{style.infoButton}"><span ui:field="infoButton">?</span></div>
</g:HTMLPanel>
</g:FocusPanel>

</ui:UiBinder>